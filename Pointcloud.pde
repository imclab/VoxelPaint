void objMain() {
  objBegin();
  for (int i=0;i<voxel.length;i++) {
    for (int j=0;j<voxel[i].length;j++) {
      for (int k=0;k<voxel[i][j].length;k++) {
        if (voxel[i][j][k].drawMe) {
          dataObj.add("v " + (voxel[i][j][k].p.x) + " " + (voxel[i][j][k].p.y) + " " + (voxel[i][j][k].p.z));
        }
      }
    }
  }
  objEnd();
}



